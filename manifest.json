{
    "manifest_version": 3,
    "name": "Dark Pattern Detector",
    "version": "1.0",
    "description": "Detects pre-selected checkboxes",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_width": 600
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"]
      }
    ]
  }
